#include "calc.h"


/**
 * op_add - Entry point
 *
 * @a: first value
 * @b: second value that to be added to first one
 *
 * Description: perform the sum of a and b
 *
 * Return: sum
 */
int op_add(int a, int b)
{
	return (a + b);
}


/**
 * op_sub - Entry point
 *
 * @a: first value
 * @b: second value
 *
 * Description: perform the difference of a and b
 *
 * Return: diff
 */
int op_sub(int a, int b)
{
	return (a - b);
}


/**
 * op_mul - Entry point
 *
 * @a: first value
 * @b: second value
 *
 * Description: perform the prodcut of a and b
 *
 * Return: product of a and b
 */
int op_mul(int a, int b)
{
	return (a * b);
}


/**
 * op_div - Entry point
 *
 * @a: first value
 * @b: second value
 *
 * Description: perform the division of a and b
 *
 * Return: quotient of the division
 */
int op_div(int a, int b)
{
	return (a / b);
}


/**
 * op_mod - Entry point
 *
 * @a: first value
 * @b: second value
 *
 * Description: perform the modulo of a and b
 *
 * Return: the remainder of the division
 */
int op_mod(int a, int b)
{
	return (a % b);
}
